<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:background="#8B0000"
    android:visibility="visible"
    tools:context=".FRC2018">


    <TextView
        android:id="@+id/match"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:text="Match #000"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team" />

    <TextView
        android:id="@+id/team"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Team 0000"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/baseline"
        android:layout_width="139dp"
        android:layout_height="41dp"
        android:layout_marginStart="132dp"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="106dp"
        android:text="Baseline"
        android:textColor="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/switchcubestele"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/tele_switch_down"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#000000"
        android:onClick="teleSwitchDown"
        android:text="- 1"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="@+id/switchcubestele"
        app:layout_constraintTop_toBottomOf="@+id/switchcubestele" />

    <Button
        android:id="@+id/tele_switch_up"
        android:layout_width="51dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#000000"
        android:onClick="teleSwitchUp"
        android:text="+ 1"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/switchcubestele"
        app:layout_constraintTop_toBottomOf="@+id/switchcubestele" />

    <Button
        android:id="@+id/auto_scale_down"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#000000"
        android:onClick="autoScaleDown"
        android:text="-"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="@+id/goldtext3"
        app:layout_constraintTop_toBottomOf="@+id/goldtext3" />

    <Button
        android:id="@+id/auto_switch_down"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#000000"
        android:onClick="autoSwitchDown"
        android:text="-"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="@+id/goldtext2"
        app:layout_constraintTop_toBottomOf="@+id/goldtext2" />

    <Button
        android:id="@+id/auto_switch_up"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#000000"
        android:onClick="autoSwitchUp"
        android:text="+ 1"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/goldtext2"
        app:layout_constraintTop_toBottomOf="@+id/goldtext2" />

    <Button
        android:id="@+id/auto_scale_up"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#000000"
        android:onClick="autoScaleUp"
        android:text="+ 1"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/goldtext3"
        app:layout_constraintTop_toBottomOf="@+id/goldtext3" />

    <EditText
        android:id="@+id/scale_tele"
        android:layout_width="90dp"
        android:layout_height="64dp"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#f4ff30"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="@+id/scalecubestele"
        app:layout_constraintTop_toBottomOf="@+id/scalecubestele" />

    <TextView
        android:id="@+id/scalecubestele"
        android:layout_width="200dp"
        android:layout_height="29dp"
        android:layout_marginTop="132dp"
        android:text="Scale Cubes (Tele)"
        android:textColor="#ffffff"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/switchcubestele"
        app:layout_constraintTop_toTopOf="@+id/switchcubestele" />

    <Button
        android:id="@+id/tele_scale_down"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#000000"
        android:onClick="teleScaleDown"
        android:text="- 1"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="@+id/scalecubestele"
        app:layout_constraintTop_toBottomOf="@+id/scalecubestele" />

    <Button
        android:id="@+id/tele_scale_up"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#000000"
        android:onClick="teleScaleUp"
        android:text="+ 1"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/scalecubestele"
        app:layout_constraintTop_toBottomOf="@+id/scalecubestele" />

    <EditText
        android:id="@+id/switch_tele"
        android:layout_width="90dp"
        android:layout_height="59dp"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#f4ff30"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="@+id/switchcubestele"
        app:layout_constraintTop_toBottomOf="@+id/switchcubestele" />


    <EditText
        android:id="@+id/scale_auto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#f4ff30"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/goldtext3"
        app:layout_constraintTop_toBottomOf="@+id/goldtext3" />

    <EditText
        android:id="@+id/switch_auto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#f4ff30"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/goldtext2"
        app:layout_constraintTop_toBottomOf="@+id/goldtext2" />

    <TextView
        android:id="@+id/switchcubestele"
        android:layout_width="200dp"
        android:layout_height="29dp"
        android:text="Switch Cubes (Tele)"
        android:textColor="#ffffff"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/match"
        app:layout_constraintTop_toBottomOf="@+id/match" />

    <TextView
        android:id="@+id/goldtext2"
        android:layout_width="152dp"
        android:layout_height="27dp"
        android:layout_marginTop="72dp"
        android:text="Switch (Auto)"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/baseline"
        app:layout_constraintTop_toTopOf="@+id/baseline" />

    <TextView
        android:id="@+id/goldtext3"
        android:layout_width="152dp"
        android:layout_height="27dp"
        android:layout_marginTop="120dp"
        android:text="Scale (Auto)"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/goldtext2"
        app:layout_constraintTop_toTopOf="@+id/goldtext2" />

    <Button
        android:id="@+id/pen_down"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#000000"
        android:onClick="penaltyDown"
        android:text="- 5"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/pentext"
        app:layout_constraintTop_toBottomOf="@+id/pentext" />

    <Button
        android:id="@+id/vault_up"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#000000"
        android:onClick="vaultUp"
        android:text="+ 1"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/vaulttext"
        app:layout_constraintTop_toBottomOf="@+id/vaulttext" />

    <Button
        android:id="@+id/vault_down"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#000000"
        android:onClick="vaultDown"
        android:text="- 1"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="@+id/vaulttext"
        app:layout_constraintTop_toBottomOf="@+id/vaulttext" />

    <Button
        android:id="@+id/pen_up"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#000000"
        android:onClick="penaltyUp"
        android:text="+ 5"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="@+id/pentext"
        app:layout_constraintTop_toBottomOf="@+id/pentext" />

    <EditText
        android:id="@+id/vault"
        android:layout_width="90dp"
        android:layout_height="71dp"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#f4ff30"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="@+id/vaulttext"
        app:layout_constraintTop_toBottomOf="@+id/vaulttext" />

    <EditText
        android:id="@+id/penalty_counter"
        android:layout_width="90dp"
        android:layout_height="64dp"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#f4ff30"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="@+id/pentext"
        app:layout_constraintTop_toBottomOf="@+id/pentext" />

    <TextView
        android:id="@+id/vaulttext"
        android:layout_width="200dp"
        android:layout_height="29dp"
        android:layout_marginTop="132dp"
        android:text="Vault Cubes (Tele)"
        android:textColor="#ffffff"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/scalecubestele"
        app:layout_constraintTop_toTopOf="@+id/scalecubestele" />

    <TextView
        android:id="@+id/pentext"
        android:layout_width="200dp"
        android:layout_height="29dp"
        android:layout_marginTop="132dp"
        android:text="Penalty Points Given"
        android:textColor="#ffffff"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/vaulttext"
        app:layout_constraintTop_toTopOf="@+id/vaulttext" />

    <Button
        android:id="@+id/submit"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#000000"
        android:text="Submit"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/final_position"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginTop="108dp"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="@+id/goldtext3"
        app:layout_constraintTop_toBottomOf="@+id/goldtext3">

        <RadioButton
            android:id="@+id/platform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="Platform"
            android:text="Platform"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/ramp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="Ramp"
            android:text="Ramp"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/climbed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="Climbed"
            android:text="Climbed"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/no_attempt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="No Attempt"
            android:text="No Attempt"
            android:textColor="#ffffff" />

    </RadioGroup>

</android.support.constraint.ConstraintLayout>
